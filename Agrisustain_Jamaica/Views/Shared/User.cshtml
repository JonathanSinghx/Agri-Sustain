@model Agrisustain_Jamaica.Models.UserProfile

@{

    ViewData["Title"] = "User Profile";
}
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<style>
    .badge-container {
        background-color: #a4c3b2;
        color: white;
        width: 45%;
        padding: 2%;
        border-radius: 20px;
        margin: 10% 55%;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
        transition: box-shadow 0.3s;
    }

    .badge {
        margin-bottom: 1rem;
        text-align: center;
    }

    h3 {
        padding: 2%;
        text-align: center;
    }

    p {
        color: white;
    }

    .fa {
        font-size: 20px;
        margin-right: 8px;
        color: white;
    }

    .user-header {
        padding-top: 5%;
    }

    .user-card {
        position: relative;
        width: 350px;
        height: 190px;
        background: #a4c3b2;
        border-radius: 20px;
        box-shadow: 0 35px 80px white;
        text-align: center;
        transition: 0.5s;
        float: left;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4)
    }

        .user-card:hover {
            height: 350px;
            width: 500px;
        }

            .user-card:hover .user-image {
                width: 250px;
                height: 200px;
            }

    .user-image {
        left: 50%;
        transform: translateX(-50%);
        top: -50px;
        position: absolute;
        width: 110px;
        height: 110px;
        border-radius: 20px;
        background: white;
        box-shadow: 0 15px 50px rgba(0,0,0,0.35);
        overflow: hidden;
        transition: 0.5s
    }

        .user-image img {
            position: absolute;
        }

    .user-card .content {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: flex-end;
        margin-top: 1%;
        color: #193631;
    }

        .user-card .content .details {
            padding: 40px;
            text-align: center;
            width: 100%;
            transition: 0.5s;
        }

        .user-card .content h2 {
            font-size: 1.25em;
            font-weight: 600;
            line-height: 1.2em;
        }

    .details h2 span {
        font-size: 0.75em;
        font-weight: 500;
        color: #193631;
    }

    .badge i {
        margin-bottom: 10px;
        color: #193631;
    }

    a {
        text-decoration: none;
    }

    .btn-container {
        padding-top: 5%;
    }

    .badge-input-container {
            background-color: #a4c3b2;
            color: white;
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
            transition: box-shadow 0.3s;
            padding: 2%;
            width: auto;
    }

    .hidden-badge {
        display: none;
    }

    .expandable-container .pdsubmission{
        overflow: hidden;
        transition: height 0.3s;
        height: 5px;
      
    }

     .expandable-container .badge-input-container {
            overflow: hidden;
            transition: height 0.3s;
            height: 5px;
     }

    .expandable-title {
        cursor: pointer;
        font-size: 1.5em;
        margin-bottom: 10px;
    }
   
    </style>
</head>

<body>

    <div class="user-header container">
        <div class="text-center">
            <h1>Welcome, @Model.FirstName!</h1>
        </div>
        @* User Profile Header *@
        <div class="container-fluid">
        @* User Card *@
        <div class="container user-card">
            <div class="content">
                <div class="details">
                    <img src="https://ibb.co/qDWNTyr" alt="User" class="user-image img-fluid">
                    <h2 id="user-name">@Model.FirstName @Model.LastName</h2>
                    <span id="user-type">@Model.UserType</span><br />
                    <span id="user-location">@Model.Location</span>
                </div>
                <div id="user-badges"></div>
            </div>
        </div>

        @* Sustainable badges area *@
        <div class="container badge-container">
            <h3>Available Badges</h3>

                <div class="row">
                    <div class="col-12 col-md-4">
                        <div class="badge d-flex flex-column justify-content-center align-items-center">
                            <i class="fa fa-tint badge-hidden"></i>
                            <a asp-controller="Home" asp-action="DripIrrigation">
                                <p class="text-light text-center" data-badge-name="Drip Irrigation">Drip Irrigation</p>
                            </a>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="badge d-flex flex-column justify-content-center align-items-center">
                            <i class="fa fa-leaf badge-hidden"></i>
                            <a asp-controller="Home" asp-action="OrganicFarming">
                                <p class="text-light" data-badge-name="Organic Farming">Organic Farming</p>
                            </a>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="badge d-flex flex-column justify-content-center align-items-center">
                            <i class="fa fa-retweet badge-hidden"></i>
                            <a asp-controller="Home" asp-action="CropRotation">
                                <p class="text-light" data-badge-name="Crop Rotation">Crop Rotation</p>
                            </a>
                        </div>
                    </div>
            </div>

                <div class="row">
                    <div class="col-12 col-md-4">
                        <div class="badge d-flex flex-column justify-content-center align-items-center">
                            <i class="fa fa-cloud-showers-heavy badge-hidden"></i>
                            <a asp-controller="Home" asp-action="RainwaterHarvesting">
                                <p class="text-light" data-badge-name="Rainwater Harvesting">Rainwater Harvesting</p>
                            </a>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="badge d-flex flex-column justify-content-center align-items-center">
                            <i class="fa fa-magic badge-hidden"></i>
                            <a asp-controller="Home" asp-action="Mulching">
                                <p class="text-light" data-badge-name="Mulching">Mulching</p>
                            </a>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="badge d-flex flex-column justify-content-center align-items-center">
                            <i class="fa fa-sync badge-hidden"></i>
                            <a asp-controller="Home" asp-action="ReducingFoodWaste">
                                <p class="text-light" data-badge-name="Reducing Food Waste">Reducing Food Waste</p>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-md-4">
                        <div class="badge d-flex flex-column justify-content-center align-items-center">
                            <i class="fa fa-seedling badge-hidden"></i>
                            <a asp-controller="Home" asp-action="HydroponicsAquaponics">
                                <p class="text-light" data-badge-name="Hydroponics and Aquaponics">Hydroponics and Aquaponics</p>
                            </a>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="badge d-flex flex-column justify-content-center align-items-center">
                            <i class="fa fa-recycle badge-hidden"></i>
                            <a asp-controller="Home" asp-action="Composting">
                                <p class="text-light" data-badge-name="Composting">Composting</p>
                            </a>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="badge d-flex flex-column justify-content-center align-items-center">
                            <i class="fa fa-bug badge-hidden"></i>
                            <a asp-controller="Home" asp-action="NaturalPestManagement">
                                <p class="text-light" data-badge-name="Natural Pest Management">Natural Pest Management</p>
                            </a>
                        </div>
                    </div>
                </div>


        </div>

            @* Track your badges *@
            <div id="trackBadgesContainer expandable-container" class="container badge-container">        
                <div class="expandable-title" onclick="toggleBadgeContainer()">Track Your Badges</div>
                @* <div id="trackBadgesContainer" class="container badge-container"> *@
                <form>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label for="badgeSelect">Select Badge:</label>
                                <select class="form-control" id="badgeSelect">
                                    <option value="" selected disabled>Choose a Badge</option>
                                    <option value="dripIrrigation">
                                        <i class="fa fa-tint"></i> Drip Irrigation
                                    </option>
                                    <option value="organicFarming">
                                        <i class="fa fa-leaf"></i> Organic Farming
                                    </option>
                                    <option value="cropRotation">
                                        <i class="fa fa-retweet"></i> Crop Rotation
                                    </option>
                                    <option value="rainwaterHarvesting">
                                        <i class="fa fa-cloud-showers-heavy"></i> Rainwater Harvesting
                                    </option>
                                    <option value="mulching">
                                        <i class="fa fa-magic"></i> Mulching
                                    </option>
                                    <option value="reducingFoodWaste">
                                        <i class="fa fa-sync"></i> Reducing Food Waste
                                    </option>
                                    <option value="hydroponicsAquaponics">
                                        <i class="fa fa-seedling"></i> Hydroponics and Aquaponics
                                    </option>
                                    <option value="composting">
                                        <i class="fa fa-recycle"></i> Composting
                                    </option>
                                    <option value="naturalPestManagement">
                                        <i class="fa fa-bug"></i> Natural Pest Management
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Criteria for Drip Irrigation -->
                    <div class="criteria-check" id="dripIrrigation-criteria">
                        <div class="row">
                            <div class="col-12">
                                <p>Badge Criteria:</p>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="criteria1">
                                    <label class="form-check-label" for="criteria1">I've completed 90 days of Drip Irrigation on my farm</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Criteria for Organic Farming -->
                    <div class="criteria-check" id="organicFarming-criteria">
                        <div class="row">
                            <div class="col-12">
                                <p>Badge Criteria:</p>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="criteria2">
                                    <label class="form-check-label" for="criteria2">I've practiced Organic Farming for over 6 months</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Criteria for Crop Rotation -->
                    <div class="criteria-check" id="cropRotation-criteria">
                        <div class="row">
                            <div class="col-12">
                                <p>Badge Criteria:</p>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="criteria3">
                                    <label class="form-check-label" for="criteria3">I've implemented crop rotation 6 times on my farm</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Criteria for Rainwater Harvesting -->
                    <div class="criteria-check" id="rainwaterHarvesting-criteria">
                        <div class="row">
                            <div class="col-12">
                                <p>Badge Criteria:</p>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="criteria4">
                                    <label class="form-check-label" for="criteria4">I've completed 3 months of rainwater harvesting</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Criteria for Mulching -->
                    <div class="criteria-check" id="mulching-criteria">
                        <div class="row">
                            <div class="col-12">
                                <p>Badge Criteria:</p>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="criteria5">
                                    <label class="form-check-label" for="criteria5">I've applied mulch to my farm over 6 times</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Criteria for Reducing Food Waste -->
                    <div class="criteria-check" id="reducingFoodWaste-criteria">
                        <div class="row">
                            <div class="col-12">
                                <p>Badge Criteria:</p>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="criteria6">
                                    <label class="form-check-label" for="criteria6">I have implemented food waste reduction strategies for 3 months</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Criteria for Hydroponics and Aquaponics -->
                    <div class="criteria-check" id="hydroponicsAquaponics-criteria">
                        <div class="row">
                            <div class="col-12">
                                <p>Badge Criteria:</p>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="criteria7">
                                    <label class="form-check-label" for="criteria7">I have implmented hydroponics and aquaponics on my farm for over 3 months</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Criteria for Composting -->
                    <div class="criteria-check" id="composting-criteria">
                        <div class="row">
                            <div class="col-12">
                                <p>Badge Criteria:</p>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="criteria8">
                                    <label class="form-check-label" for="criteria8">I've completed 180 days of Composting</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Criteria for Natural Pest Management -->
                    <div class="criteria-check" id="naturalPestManagement-criteria">
                        <div class="row">
                            <div class="col-12">
                                <p>Badge Criteria:</p>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="criteria9">
                                    <label class="form-check-label" for="criteria9">I've used Natural Pest Management practices 6 times</label>
                                </div>
                            </div>
                        </div>
                    </div>

                   

                    <div class="row">
                        <div class="btn-container col-12">
                            <button type="submit" id="addBadgeButton" class="btn btn-primary">Add to my badges</button>
                        </div>
                    </div>
                </form>
            </>
            </div>
            </div>
       </div>

        @*Pest and Disease Sighting Submission Form*@

    <div class="container expandable-container mt-5 pdsubmission">
        <div class="expandable-title" onclick="togglePestDiseaseContainer()">Pest and Disease Submission</div>
            <div id="pestDiseaseContainer" class="container pest-disease-container">

            <form action="/Farm/SubmitForm" method="post" enctype="multipart/form-data" onsubmit="submitForm()">
                <!-- Farm Location -->
                <div class="form-group">
                    <label for="farmLocation">Farm Location</label>
                    <input type="text" class="form-control" id="farmLocation" name="farmLocation" required>
                </div>

                <!-- Date of Sighting -->
                <div class="form-group">
                    <label for="dateOfSighting">Date of Sighting</label>
                    <input type="date" class="form-control" id="dateOfSighting" name="dateOfSighting" required>
                </div>

                <!-- Pest Dropdown -->
                <div class="form-group">
                    <label for="pestSelect">Select Pest</label>
                    <select class="form-control" id="pestSelect" name="pest">
                        <option value="">Select...</option>
                        <option value="pest1">Armyworms (Various Crops)</option>
                        <option value="pest2">Aphids (Various Crops)</option>
                        <option value="pest3">Whiteflies (Tomatoes, Peppers, Brassicas)</option>
                        <option value="pest4">Thrips (Tomatoes, Peppers, Strawberries)</option>
                        <option value="pest5">Cutworms (Cabbage, Corn, Lettuce)</option>
                        <option value="pest6">Mites (Tomatoes, Strawberries, Beans)</option>
                        <option value="pest7">Caterpillars (Cabbage, Broccoli, Cauliflower)</option>
                        <option value="pest8">Leafhoppers (Potatoes, Beans, Grapes)</option>
                        <option value="pest9">Flea Beetles (Eggplants, Potatoes, Tomatoes)</option>
                        <option value="pest10">Root-knot Nematodes (Tomatoes, Carrots, Potatoes)</option>
                        <option value="pest11">Spider Mites (Beans, Strawberries, Cucumbers)</option>
                        <option value="pest12">Grasshoppers (Various Crops)</option>
                        <option value="pest13">Scale Insects (Citrus, Ornamental Plants)</option>
                        <option value="pest14">Japanese Beetles (Roses, Grapes, Fruit Trees)</option>
                        <option value="pest15">Mealybugs (Citrus, Grapes, Ornamental Plants)</option>
                        <option value="pest16">Wireworms (Potatoes, Carrots, Corn)</option>
                        <option value="pest17">Snails (Lettuce, Cabbage, Strawberries)</option>
                        <option value="pest18">Slugs (Lettuce, Cabbage, Strawberries)</option>
                        <option value="pest19">Weevils (Corn, Cotton, Beans)</option>
                        <option value="pest20">Hornworms (Tomatoes, Peppers, Eggplants)</option>
                    </select>
                </div>

                <!-- Disease Dropdown -->
                <div class="form-group">
                    <label for="diseaseSelect">Select Disease</label>
                    <select class="form-control" id="diseaseSelect" name="disease">
                        <option value="">Select...</option>
                        <option value="disease1">Black Sigatoka (Bananas)</option>
                        <option value="disease2">Citrus Canker (Citrus)</option>
                        <option value="disease3">Late Blight (Tomatoes, Potatoes)</option>
                        <option value="disease4">Downy Mildew (Cucumbers, Grapes)</option>
                        <option value="disease5">Anthracnose (Beans, Tomatoes, Peppers)</option>
                        <option value="disease6">Powdery Mildew (Cucumbers, Melons, Squash)</option>
                        <option value="disease7">Bacterial Wilt (Cucumbers, Tomatoes, Potatoes)</option>
                        <option value="disease8">Fusarium Wilt (Tomatoes, Watermelons, Beans)</option>
                        <option value="disease9">Root Rot (Various Crops)</option>
                        <option value="disease10">Cercospora Leaf Spot (Tomatoes, Peppers, Beets)</option>
                        <option value="disease11">Phytophthora (Tomatoes, Peppers, Potatoes)</option>
                        <option value="disease12">Botrytis (Strawberries, Grapes, Tomatoes)</option>
                        <option value="disease13">Alternaria (Potatoes, Tomatoes, Carrots)</option>
                        <option value="disease14">Rust (Beans, Corn, Roses)</option>
                        <option value="disease15">Septoria Leaf Spot (Tomatoes, Peppers, Potatoes)</option>
                        <option value="disease16">Verticillium Wilt (Tomatoes, Eggplants, Peppers)</option>
                        <option value="disease17">Angular Leaf Spot (Cucumbers, Lettuce, Tomatoes)</option>
                        <option value="disease18">Smuts (Corn, Wheat, Barley)</option>
                        <option value="disease19">Scab (Apples, Potatoes, Pears)</option>
                        <option value="disease20">Fire Blight (Apples, Pears, Peaches)</option>
                    </select>
                </div>


                <!-- Description -->
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                </div>

                <!-- Photo Upload -->
                <div class="form-group">
                    <label for="photo">Upload Photo</label><br />
                    <input type="file" class="form-control-file" id="photo" name="photo" accept="image/*" required>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            </div>
            
        

</div>

    <script>
        $(document).ready(function () {
            $(".criteria-check").hide();

            $("#badgeSelect").change(function () {
                $(".criteria-check").hide();

                var selectedBadge = $(this).val();
                $("#" + selectedBadge + "-criteria").show();
            });

            $(".btn-container button").click(function () {
                var selectedBadgeName = $("#badgeSelect option:selected").text();

                var badgeElement = $("<div class='badge d-flex flex-column justify-content-center align-items-center'></div>");
                var iconElement = $("<i class='fa'></i>");

                var badgeName = selectedBadgeName.trim();

                switch (badgeName) {
                    case "Drip Irrigation":
                        iconElement.addClass("fa-tint");
                        break;
                    case "Organic Farming":
                        iconElement.addClass("fa-leaf");
                        break;
                    case "Crop Rotation":
                        iconElement.addClass("fa-retweet");
                        break;
                    case "Rainwater Harvesting":
                        iconElement.addClass("fa-cloud-showers-heavy");
                        break;
                    case "Mulching":
                        iconElement.addClass("fa-magic");
                        break;
                    case "Reducing Food Waste":
                        iconElement.addClass("fa-sync");
                        break;
                    case "Hydroponics and Aquaponics":
                        iconElement.addClass("fa-seedling");
                        break;
                    case "Composting":
                        iconElement.addClass("fa-recycle");
                        break;
                    case "Natural Pest Management":
                        iconElement.addClass("fa-bug");
                        break;
                }

                iconElement.hide();
                badgeElement.append(iconElement);
                badgeElement.append("<p class='text-light text-center badge-name'>" + selectedBadgeName + "</p>");
                $("#user-badges").append(badgeElement);
            });

            $("#addBadgeButton").click(function () {
                var selectedBadgeName = $("#badgeSelect").val();

                var selectedBadge = $(".badge-name:contains('" + selectedBadgeName + "')");
                selectedBadge.siblings("i.fa").show();
            });
        });

        function toggleContainer(containerId) {
            var container = document.getElementById(containerId);
            if (container.style.display === "none" || container.style.display === "") {
                container.style.display = "block";
            } else {
                container.style.display = "none";
            }
        }
         
        // Function to toggle the Pest and Disease Submission container
        function togglePestDiseaseContainer() {
            toggleContainer('pestDiseaseContainer');
        }

        // Function to toggle the Track Your Badges container
        function toggleBadgeContainer() {
            toggleContainer('trackBadgesContainer');
        }
    </script>


   

 

</body>
</html>