@model Agrisustain_Jamaica.Models.ViewModels.AddIrrigationEventModel;

<section class="bg-gradient p-5 mb-5 banner resources-banner">
    <div class="wrapper">
        <div class="row flex-column flex-md-row justify-content-md-between align-items-center flex-container">
            <div class="col col-left">
                <h1 class="fw-bolder lh-1 mb-4">
                    Add Irrigation Event
                </h1>
                <div class="d-flex button-group">
                    <a class="btn btn-secondary w-50" asp-area="" asp-controller="IrrigationPlanning" asp-action="Index">View Irrigation Events</a>
                </div>
            </div>
            <div class="col d-flex justify-content-center justify-content-md-end align-items-start right-col">
                <img src="~/images/corn-clipart-crop.png" alt="corn" />
            </div>
        </div>
    </div>
</section>
<section class="crop-tracking-add form-section">
    <div class="[ position-relative mt-5 p-5 mt-lg-0 ] [ form-container ]">
        <form method="post" action="Add">
            <div class="mb-3">
                <label for="startDate" class="form-label">Start Date</label>
                <input type="date" class="form-control" id="start" asp-for="StartDate">
            </div>
            <div class="mb-3">
                <label for="endDate" class="form-label">End Date</label>
                <input type="date" class="form-control" id="end" asp-for="EndDate">
            </div>
            <div class="mb-3">
                <label for="reason" class="form-label">Reason</label>
                <input type="text" class="form-control" id="reason" asp-for="Reason">
            </div>
            <div class="mb-3">
                <label for="growthStage" class="form-label">Growth Stage</label>
                <input type="text" class="form-control" id="growthStage" asp-for="GrowthStage">
            </div>
            <div class="mb-3">
                <label for="targetCrops" class="form-label">Target Crops</label>
                <input type="text" class="form-control" id="targetCrops" asp-for="TargetCrops">
            </div>
            <div class="mb-3">
                <label for="application" class="form-label">Application Pattern</label>
                <input type="text" class="form-control" id="application" asp-for="ApplicationPattern">
            </div>
            <button type="submit" class="btn px-3">Save</button>
        </form>
    </div>
</section>

