    }

    .recipe-hero h1 {
        font-size: 3rem;
        line-height: .8;
        margin: 2em 0px 1em;
        max-width: max-content;
    }

    .recipe-hero h1 > span {
        font-size: 6rem;
    }

    .recipe-hero .vegetables-img {
        position: absolute;
        left: 0px;
        max-width: 600px;
    }

    .recipe-hero .images-container {
        right: 0;
        top: 80px;
        max-width: 300px;
        z-index: 999;
        }

    .recipe-hero .images-container > img {
        position: relative;
        max-width: 200px;
