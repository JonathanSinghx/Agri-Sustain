        max-width: max-content;
    
    }

    .shadowed-text-salads {
        position: relative;
        /* color: var(--clr-primary); */
        margin-left: -1.8em;
    }

    .shadowed-text-drinks {
        margin-left: -1.2em;
    }

    .shadowed-text-foods {
        margin-left: -.8em;
    }

    .recipe-cards-container input {
       text-indent: 5px;
       border: none;
       outline: none;
       flex-grow: 2;
    }

    .recipe-cards-container .input-container {
        flex-grow: 2;
        padding-left: 1em;
        max-width: 600px;
        border: 1px solid var(--clr-neutral-dark);
        border-radius: 5px;
    }

    .recipe-cards-container #search-btn {
        width: 25%;
        border-top-left-radius: 0px;
        border-bottom-left-radius: 0px;
    }

    .recipe-cards-container #search-btn:hover {
        background-color: var(--clr-accent);
    }
</style>


<section class="d-flex position-relative mb-5 recipe-hero">
    <div class="container py-5">
        <h1>Food <span class="d-block">Recipes</span></h1>
        <img class="vegetables-img" src="/png-food-recipe.png" alt="vegetables" />
        <div class="images-container position-absolute">
            <img class="salad-img"src="/Salad-Free-PNG-Image.png" alt="" />
            <img class="drink-img"src="/Drink-PNG-8.png" alt="" />
            <img class="food-img"src="/food-png-food.png" alt="" />
        </div>
    </div>
  
    <div class="col position-absolute right-bg-col bg-gradient">
        <p class="shadowed-text shadowed-text-salads">Salads</p>
        <p class="shadowed-text shadowed-text-drinks">Drinks</p>
        <p class="shadowed-text shadowed-text-foods">Foods</p>
      

    </div>
</section>

<section class="recipe-cards-container">
    <div class="container">
        <div class="d-flex justify-content-between align-items-start gap-3 py-5 top-content">
            <p class="fw-bold fs-3">Learn to cook delicious meals right now.</p>
            <div class="d-flex justify-content-between input-container">
                <input type="text" placeholder="Search..." id="user-input" />
                <button id="search-btn"> Search</button>
            </div>
        </div>
       
        <div id="cardContainer" class="row lh-1 justify-content-between mb-5">
            <div class="col recipe">
                <img src="https://foodies.co.uk/wp-content/uploads/2020/02/jerk-chicken-1920x2880.jpg">
                <div class="info">
                    <div class="name">
                        <h2 class="fw-bolder fs-6">Jamaican Jerk Chicken</h2>
                    </div>
                    
                        <a asp-controller="Home" asp-action="JerkChicken" class="view-button">View Recipe</a>
                    
                </div>
            </div>
            <div class="col recipe">
                <img src="https://shorturl.at/bhmUZ">
                <div class="info">
                    <div class="name">
                        <h2 class="fw-bolder fs-6">Ackee and Salfish</h2>
                    </div>
                    
                        <a asp-controller="Home" asp-action="ackeesaltfish" class="view-button">View Recipe</a>
                    
                </div>

            </div>
            <div class="col recipe">
                <img src="https://cdn.meaningfuleats.com/wp-content/uploads/2017/05/IMG_7139-1.jpg">
                <div class="info">
                    <div class="name">
                        <h2 class="fw-bolder fs-6">Corn Soup</h2>
                    </div>
                    
                        <a asp-controller="Home" asp-action="cornsoup" class="view-button">View Recipe</a>
                   
                </div>
            </div>
        </div>     
    </div>
</section>


