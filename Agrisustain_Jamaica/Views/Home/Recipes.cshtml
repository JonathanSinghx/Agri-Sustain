@using AgriSustain_Jamaica.Models;


<style>
 
    #cardContainer {
        padding: 3em;
        background-color: var(--clr-accent);
        border-radius: 2em;
    }

    #cardContainer > * {
        flex-basis: 33.33%;
    }

    .recipe > img {
        width: 100%;
        /* max-width: 300px; */
        margin-bottom: 1em;
        aspect-ratio: 1;
        object-fit: cover;
        border-radius: 1em;
    }

    .recipe .view-button {
        font-size: .8rem;
        display: inline-flex;
        align-items: center;
        color: var(--clr-neutral-light);
        padding: 1em;
        background-color: var(--clr-primary);
        border-radius: 99vw;
        cursor: pointer;
        transition: all 5ms ease-in-out;
    }
      
    .info {
       /*  padding: 15px;
        flex-direction: column;
        flex: 1;
        display: grid; */
    }

    .quantity {
        display: flex;
        gap: 5px;
        justify-content: center;
    }

    .quantity-select {
        padding: 15px 0;
        width: 80px;
        display: none;
        margin: 0 auto;
    }

  
    .number {
        color: #193631;
        font-weight: bold;
    }

    button {
       
        padding: 10px;
        border: none;
        outline: none;
        background-color: #193631;
        color: white;
        font-weight: bold;
        border-radius: 5px;

    }

    .location-wrap {
        display: flex;
        justify-content: end;
    }

    .location {
        color: #193631;
        font-weight: bold;
        font-size: .9em;
        height: fit-content;
        align-self: flex-end;
    }

    .recipe-hero {
        /*  background-image: url('/nutrition-bg.jpg');
        background-repeat: no-repeat;
