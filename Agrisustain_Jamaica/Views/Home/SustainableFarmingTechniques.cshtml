        flex: 0 0 calc(33.33% - 20px) !important;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transition: transform 0.3s;
        margin-bottom: 5%;
    }

        .card:hover {
            transform: translateY(-10px);
        }

        .card h2 {
            color: #193631;
            margin-bottom: 15px;
        }

        .card h3 {
            text-align: center;
        }

        .card p {
            margin-top: 15px;
            font-size: 14px;
            height: 25%;
            text-align: justify;
        }

        .card a {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #193631;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
            width: 35%;
            text-align: center;
            align-self: center;
        }

            .card a:hover {
                background-color: #193631;
            }


    h1 {
        padding: 5%;
        color: white;
    }

    .header {
        background-color: #193631;
    }


    .search {
        align-self: center;
        margin: 3%;
    }

        .search button {
            background-color: #193631;
            border-radius: 5%;
            color: white;
            border: none;
            padding: .3% 1%
        }

    #searchInput {
        width: 60%;
        margin-left: 20%;
    }

    p {
        color: black;
    }

    .bg-gradient {
    line-height: 1.5;
    color: white;
    background-color: rgb(25,54,49);
    background-image: radial-gradient(circle, rgba(25,54,49,1) 0%, rgba(162,212,203,1) 100%);
}

h5 {
    padding: 4%;
}
</style>

