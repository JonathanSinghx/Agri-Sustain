@* @page
@model Agrisustain_Jamaica.Views.Home.DripIrrigationTestResultModel

<h2>Test Results</h2>

<p>Your score: @Model.Score</p>

@model List<DripIrrigationQuestion>

<h2>Drip Irrigation Test</h2>

@using (Html.BeginForm("SubmitDripIrrigationTest", "Test", FormMethod.Post))
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="question">
            <p>@Model[i].QuestionText</p>
            @for (int j = 0; j < Model[i].Options.Count; j++)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="answer_@i" id="option_@i_@j" value="@Model[i].Options[j]">
                    <label class="form-check-label" for="option_@i_@j">@Model[i].Options[j]</label>
                </div>
            }
        </div>
    }

    <button type="submit" class="btn btn-primary">Submit</button>
}
 *@